<h1>Collections</h1>
<nav>
	<ul>
		<li>
			<a href="/collections/new">Add a collection</a>
		</li>
	</ul>
</nav>

<table>
	<thead>
		<th>Name</th>
		<th>Size</th>
		<th>Created at</th>
	</thead>
	<tbody>
		<% @collections.each do |collection| %>
		<tr>
			<td><%= collection.name %></td>
			<td><%= collection.size %></td>
			<td><%= collection.created_at %></td>
		</tr>
		<% end %>
	</tbody>
</table>
