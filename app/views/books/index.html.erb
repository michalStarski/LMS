<h1>Books</h1>
<nav>
  <ul>
    <li>
      <a href="/books/new">Add a book</a>
    </li>
  </ul>
</nav>
<table>
  <thead>
    <th>Title</th>
    <th>Published in</th>
    <th>Authors</th>
    <th>Created at</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.publish_date %></td>
        <% book.authors.each do |author| %>
          <td><%= "#{author.name} #{author.surname}" %></td>
        <% end %>
        <td><%= book.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
